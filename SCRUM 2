// List of grocery items
const groceryItems = [
    "milk",
    "bread",
    "apples",
    "bananas",
    "eggs",
    "butter",
    "apples",
    "orange juice"
];

// Function to search for an item in the grocery list
function searchItem(itemToFind) {
    // Loop through the grocery items
    for (let i = 0; i < groceryItems.length; i++) {
        // Check if the current item matches the item we are searching for
        if (groceryItems[i].toLowerCase() === itemToFind.toLowerCase()) {
            return `${itemToFind} found in the list.`;
        }
    }
    // If the loop completes without finding the item
    return `${itemToFind} not found in the list.`;
}

// Search for "apples"
const searchResult = searchItem("apples");
console.log(searchResult);

