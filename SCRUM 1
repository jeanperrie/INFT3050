// Array containing grocery products
const items = [
    "milk",
    "bread",
    "apples",
    "bananas",
    "eggs",
    "butter",
    "apples",
    "orange juice"
];

// Function to locate a specific product in the array
function findProduct(query) {
    // Iterate through the product array
    for (let index = 0; index < items.length; index++) {
        // Convert current product and query to lowercase for comparison
        if (items[index].toLowerCase() === query.toLowerCase()) {
            return `${query} is present in the list.`;
        }
    }
    // Return message if product is not found
    return `${query} is not present in the list.`;
}

// Example usage: search for "apples"
const result = findProduct("apples");
console.log(result);


